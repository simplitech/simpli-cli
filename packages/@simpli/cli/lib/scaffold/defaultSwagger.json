          {
            "name":"X-Client-Version",
            "in":"header",
            "required":false,
            "type":"string",
            "default":"w1.0.0"
          },
          {
            "name":"Authorization",
            "in":"header",
            "required":true,
            "type":"string",
            "x-example":"Bearer my-token-here"
          }
        ],
        "responses":{
          "200":{
            "description":"successful operation",
            "schema":{
              "$ref":"#/definitions/AuthResponse"
            }
          }
        }
      },
      "post":{
        "tags":[
          "AuthRequest"
        ],
